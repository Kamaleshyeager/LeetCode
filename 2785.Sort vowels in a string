class Solution:
    def sortVowels(self, s: str) -> str:
        vowels = set("aeiouAEIOU")
        
        # Step 1: collect vowels
        collected = [ch for ch in s if ch in vowels]
        
        # Step 2: sort vowels
        collected.sort()
        
        # Step 3: rebuild string
        result = []
        j = 0  # index for collected vowels
        for ch in s:
            if ch in vowels:
                result.append(collected[j])
                j += 1
            else:
                result.append(ch)
        
        return "".join(result)
